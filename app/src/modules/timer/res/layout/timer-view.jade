md-toolbar
    .md-toolbar-tools
        md-button.md-icon-button.material-icons(ng-click='AppVM.toggleSidenav()') menu
        span(translate='APP.TIMER.TIMER')
        span(flex)
        md-button.md-icon-button.material-icons(
            ng-hide='TimerVM.TimerService.enabled'
            ng-click='TimerVM.startAction()'
        ) timer_off
        
        md-button.md-icon-button.material-icons(
            ng-show='TimerVM.TimerService.enabled'
            ng-click='TimerVM.stopAction()'
        ) timer
        
        md-button.md-icon-button.material-icons(
            ng-click='TimerVM.resetAction()'
        ) restore

md-content
    md-card
        md-card-content
            div(layout='row', layout-align='center center')
                span.md-display-1(ng-bind="TimerVM.TimerService.countedFormatted[0]")
                |:
                span.md-display-2(ng-bind="TimerVM.TimerService.countedFormatted[1]")
                |:
                span.md-display-1(ng-bind="TimerVM.TimerService.countedFormatted[2]")

